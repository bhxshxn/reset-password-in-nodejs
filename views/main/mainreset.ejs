    <%- include("./../partials/navbar.ejs") %>
        <div class="center-text">
            <form class="form-signin" method="POST" action="/user/resetconfirm">
                <h2 class="form-signin-heading">Please Sign up</h2>
                <%if(msg){%>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <%=msg%>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                    </div>
                    <%}%>
                        <label for="inputPassword" class="sr-only"> New Password</label>
                        <input name="password" type="text" id="inputPassword" class="form-control"
                            placeholder="New Password" required style="margin-bottom: 10px;">
                        <label for="inputPassword" class="sr-only">Password</label>
                        <input name="conpassword" type="password" id="inputPassword" class="form-control"
                            placeholder="Confirm Password" required style="margin-bottom: 10px;">

                        <button class="btn btn-lg btn-primary btn-block mb-4" type="submit">Submit</button>
            </form>
        </div>
        <script src="/js/main.js"></script>
